//- button mixins
//- anchor buttons
mixin a-btn(url,style)
	- var type = (typeof style === 'undefined') ? "default" : style
	a.btn(class="btn-" + type,href=url,role="button")&attributes(attributes)
		block

mixin a-btn-primary(url)
	+a-btn(url,"primary")&attributes(attributes)
		block
	
mixin a-btn-info(url)
	+a-btn(url,"info")&attributes(attributes)
		block
	
mixin a-btn-warning(url)
	+a-btn(url,"warning")&attributes(attributes)
		block
	
mixin a-btn-danger(url)
	+a-btn(url,"danger")&attributes(attributes)
		block
	
mixin a-btn-success(url)
	+a-btn(url,"success")&attributes(attributes)
		block

//- buttons
mixin btn(caption,style,size)
	- var type = (typeof style === 'undefined') ? "default" : style
	unless size
		button.btn(class="btn-" + type,type="button")&attributes(attributes)= caption
	else
		button.btn(class="btn-" + type + " btn-" + size,type="button")&attributes(attributes)= caption


mixin btn-primary(caption)
	+btn(caption,"primary")&attributes(attributes)
	
mixin btn-info(caption)
	+btn(caption,"info")&attributes(attributes)
	
mixin btn-warning(caption)
	+btn(caption,"warning")&attributes(attributes)
	
mixin btn-danger(caption)
